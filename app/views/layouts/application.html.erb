<!DOCTYPE html>
<html>
  <head>
    <title>Phase2Project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="logo">
        <%= link_to items_path do %>
          <%= image_tag "logo.jpg", size: "130x80" %>
        <% end %>
      </div>

     <div id="search_bar">
        <%= form_tag(items_path, method: :get) do %>
          <%= text_field_tag(:name)%>
          <%= submit_tag("Search")%>
        <% end %>
    </div>

    <div id="user">
      <% if is_logged_in? %>
        Logged in as: <%= current_customer.username %>
        <%= button_to "Log out", logout_path, method: "delete" %>
      <% else %>
        <%= link_to "Sign up", new_customer_path %>
        <%= link_to "Log In", "/login" %>
      <% end %>
    </div>

    <div id="cart">
      <%= link_to purchases_path do %>
        <%= image_tag "shopping_cart.png", size: "60x50" %>
      <% end %>
    </div>

    </header>

    <%= yield %>
  </body>
</html>
