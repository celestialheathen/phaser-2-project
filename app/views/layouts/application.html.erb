<!DOCTYPE html>
<html>
  <head>
    <title>Phase2Project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="logo">
      <%= link_to items_path do %>
        <%= image_tag "logo.jpg", size: "120x80" %>
        <% end %>
      </div>
    <p>
    <%= form_tag(items_path, method: :get) do %>
        <%= text_field_tag(:name)%>
        <%= submit_tag("Search our website")%>
    <% end %>
    </p>

    <% if is_logged_in? %>
      <p> Logged in as: <%= current_customer.username %> </p>
      <p> <%= button_to "Log out", logout_path, method: "delete" %> </p>
    <% else %>
    <p>
      <%= link_to "Sign up", new_customer_path %>
      <%= link_to "Log In", "/login" %>
    </p>
    <% end %>

    </header>

    <%= yield %>
  </body>
</html>
