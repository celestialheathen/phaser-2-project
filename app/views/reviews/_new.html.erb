<% if is_logged_in? %>
<h4> Write A Review </h4>
<%= form_for @review do |f| %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.collection_select :rating, (1..5).to_a, :itself, :itself %>
    <%= f.text_field :body %>
    <%= f.submit %>
<% end %>

<% end %>